<?xml version="1.0" encoding="utf-8"?>
  <navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
     app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/login"
        android:name="com.example.weather.ui.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_home2"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.example.weather.ui.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
     <fragment
         android:id="@+id/splashScreen"
         android:name="com.example.weather.ui.SplashScreen"
         android:label="fragment_splash_screen"
         tools:layout="@layout/fragment_splash_screen" >
         <action
             android:id="@+id/action_splashScreen2_to_login"
             app:destination="@id/login" />
     </fragment>
 </navigation>